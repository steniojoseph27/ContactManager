@model Client

<h1>Add a new Contact</h1>

<form asp-controller="Contacts" asp-action="Create" class="form-horizontal" role="form">

    <div class="form-group">
        <label asp-for="FirstName" class="col-md-3 control-label"></label>
    <div class="col-md-9">
        <input asp-for="FirstName" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-9 col-sm-offset-3">
            <button type="submit" class="btn btn-primary">Add Contact</button>
            <a class="btn btn-default" asp-controller="Contacts" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>